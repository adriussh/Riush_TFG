<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondon"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tres_en_raya">

    <View
        android:id="@+id/line_horizontal_2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0" />

    <View
        android:id="@+id/line_horizontal_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/line_vertical_2"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@id/button8"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@id/button3"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/line_vertical_1"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@id/button7"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Lineas de Victoria -->

    <!-- Verticales -->

    <View
        android:id="@+id/vertical_victory_1"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#00FF00"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button1" />
    <View
        android:id="@+id/vertical_victory_2"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#00FF00"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <View
        android:id="@+id/vertical_victory_3"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#00FF00"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <!-- Horizontales -->
    <View
        android:id="@+id/horizontal_victory_1"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#00FF00"
        android:visibility="invisible"

        app:layout_constraintBottom_toTopOf="@+id/line_horizontal_1"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/vertical_victory_2" />

    <View
        android:id="@+id/horizontal_victory_2"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#00FF00"
        android:visibility="invisible"

        app:layout_constraintTop_toTopOf="@id/button5"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button1" />

    <View
        android:id="@+id/horizontal_victory_3"
        android:layout_width="420dp"
        android:layout_height="3dp"
        android:background="#00FF00"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/vertical_victory_2"
        app:layout_constraintEnd_toEndOf="@+id/button9"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button5" />


    <!-- Diagonales -->

    <View
        android:id="@+id/diagonal_victory_1"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#00FF00"
        android:rotation="45"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/vertical_victory_2"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_victory_2"
        app:layout_constraintStart_toStartOf="@+id/horizontal_victory_2"
        app:layout_constraintTop_toTopOf="@+id/vertical_victory_2" />

    <View
        android:id="@+id/diagonal_victory_2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#00FF00"
        android:rotation="-45"

        app:layout_constraintBottom_toBottomOf="@+id/vertical_victory_2"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_victory_2"
        app:layout_constraintStart_toStartOf="@+id/horizontal_victory_2"
        app:layout_constraintTop_toTopOf="@+id/vertical_victory_2"
        android:visibility="invisible"
        />




    <!-- Botones del tablero -->

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:onClick="ponerficha"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button2"
        tools:visibility="visible" />

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:onClick="ponerficha"
        android:textColorLink="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:rippleColor="#FFFFFF"
        tools:visibility="visible" />

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:onClick="ponerficha"
        android:textColorLink="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:rippleColor="#FFFFFF"
        tools:visibility="visible" />

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:onClick="ponerficha"
        android:textColorLink="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:rippleColor="#FFFFFF"
        tools:visibility="visible" />

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:onClick="ponerficha"
        android:textColorLink="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#FFFFFF"
        tools:visibility="visible" />

    <ImageButton
        android:contentDescription=""
        android:background="@android:color/transparent"
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:onClick="ponerficha"
        android:textColorLink="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#FFFFFF"
        tools:visibility="visible" />

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="68dp"
        android:onClick="ponerficha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button8"
        tools:visibility="visible" />

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="68dp"
        android:onClick="ponerficha"
        android:textColorLink="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:rippleColor="#FFFFFF"
        tools:visibility="visible" />

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="68dp"
        android:onClick="ponerficha"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/image_turn"
        android:layout_width="112dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maintext"
        app:layout_constraintVertical_bias="0.212" />

    <TextView
        android:id="@+id/maintext"
        android:layout_width="156dp"
        android:layout_height="35dp"
        android:fontFamily="sans-serif"
        android:text="Es el turno de:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/reiniciar"
        android:layout_width="130dp"
        android:layout_height="72dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="Reiniciar"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_turn" />

</androidx.constraintlayout.widget.ConstraintLayout>